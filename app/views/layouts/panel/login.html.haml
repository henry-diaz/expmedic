!!! 5
%html
  %head
    %title
      Panel de control | ExpMedic
    %meta{ charset: 'utf-8' }
    %meta{ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1' }

    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'shortcut icon' }
    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'apple-touch-icon' }
    %link{ href: image_path('favicon.png'), sizes: '128x128', rel: 'apple-touch-icon-precomposed' }

    = stylesheet_link_tag 'panel/login'
    = javascript_include_tag 'panel/login'
    = csrf_meta_tags
  %body.animated.fadeInDown
    .container
      .row
        .col-md-push-4.col-md-4.col-sm-push-3.col-sm-6.col-sx-12.animated.flipInY
          %header
            = link_to panel_root_url, class: 'logo' do
              = image_tag 'panel/logo.png', class: 'img-responsive'

          = yield

    %footer#footer
      %p.copyright
        2015 - ExpMedic
