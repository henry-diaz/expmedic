    = javascript_include_tag 'jquery.hparallax'
    = javascript_include_tag 'jquery.wait'
    = javascript_include_tag 'appear'
    = javascript_include_tag 'fappear'
    = javascript_include_tag 'modernizr-2.6.2.min'
    = javascript_include_tag 'jquery.bxslider.min'
    = javascript_include_tag 'jquery.maximage'
    = javascript_include_tag 'jquery.cycle.all'
    = javascript_include_tag 'jquery.prettyPhoto'
    = javascript_include_tag 'jquery.sticky'
    = javascript_include_tag 'jquery.isotope'
    = javascript_include_tag 'imagesloaded.pkgd.min'
    = javascript_include_tag 'jquery.countTo'
    = javascript_include_tag 'skrollr.min'
    = javascript_include_tag 'jquery.scrollTo.min'
    = javascript_include_tag 'jquery.nav'
    = javascript_include_tag 'wow'
    = javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
