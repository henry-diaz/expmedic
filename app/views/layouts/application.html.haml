!!! 5
%html{ language: I18n.locale }
  %head
    %meta{ property: 'og:image', content: asset_url('share-fb.jpg', t: false) }
    %meta{ charset: 'utf-8' }
    %title ExpMedic
    %meta{:content => "ExpMedic - Expedientes clínicos electrónicos", :name => "description"}/
    %meta{:content => "EXPMEDIC.COM", :name => "author"}/
    / Mobile Metas
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    / Google Fonts
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Raleway:400,500,600,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Pacifico", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Tangerine", :rel => "stylesheet", :type => "text/css"}/
    / Library CSS
    = stylesheet_link_tag 'bootstrap.min'
    = stylesheet_link_tag 'bootstrap-theme.min'

    = stylesheet_link_tag 'team-member'
    = stylesheet_link_tag 'animations'
    = stylesheet_link_tag 'prettyPhoto'
    = stylesheet_link_tag 'jquery.bxslider'
    / Theme CSS
    = stylesheet_link_tag 'style'
    = stylesheet_link_tag 'global'
    / Skin
    = stylesheet_link_tag 'colors/blue', calss: 'color'
    / Favicons
    %link{:href => image_path("ico/favicon.ico"), :rel => "shortcut icon"}/
    %link{:href => image_path("ico/apple-touch-icon.png"), :rel => "apple-touch-icon"}/
    %link{:href => image_path("ico/apple-touch-icon-72.png"), :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => image_path("ico/apple-touch-icon-114.png"), :rel => "apple-touch-icon", :sizes => "114x114"}/
    %link{:href => image_path("ico/apple-touch-icon-144.png"), :rel => "apple-touch-icon", :sizes => "144x144"}/
    / The HTML5 shim, for IE6-8 support of HTML5 elements
    /[if lt IE 9]
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
      <script src="js/respond.min.js"></script>
    /[if IE]
      <link rel="stylesheet" href="css/ie.css">
  %body{"data-offset" => "75", "data-spy" => "scroll", "data-target" => "#navigation"}
