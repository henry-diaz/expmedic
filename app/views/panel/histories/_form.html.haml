  .col-xs-7
    = f.text_area :family, row: 3, class: 'form-control'
.form-group
  = f.label :surgical, class: 'control-label col-xs-3'
  .col-xs-7
    = f.text_area :surgical, row: 3, class: 'form-control'
.form-group
  = f.label :allergies, class: 'control-label col-xs-3'
  .col-xs-7
    = f.text_area :allergies, row: 3, class: 'form-control'
.form-group
  = f.label :medicines, class: 'control-label col-xs-3'
  .col-xs-7
    = f.text_area :medicines, row: 3, class: 'form-control'
